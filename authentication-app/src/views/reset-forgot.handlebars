<div class="d-flex col-12 justify-content-center">
  <div class="bg-light col-3 h-50 rounded mt-5 mb-5 border">
      <h3 class="mt-1">Forgot password?</h3>
      <p> You can reset your password here.
        <hr>
        {{#if err}}
        <div class="alert alert-danger">{{err}}</div>
        {{/if}}
      <form action="/accounts/password_reset" method="post">
        <div class="form-group">
          <div class="input-group">
           <div class="input-group-prepend">

            <span class="input-group-text" id="basic-addon3"><i class="fa fa-envelope" style="color: gray;"></i></span>
          </div>
          <input type="email" class="form-control" id="email" name="email" placeholder="E-mail Address">
        </div>
        </div>
        <button type="submit" class="btn btn-primary col-12 mb-2">Reset Password</button>
      </form>
  </div>
</div>